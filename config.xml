<widget id="com.indalista.hello" version="0.1.1">
    <name>IndaList</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="alexj.desantanna@gmail.com" href="http://www.alexjonas.com.br">
        Apache Cordova Team
    </author>
    <content src="www/index.html" />
    <access origin="*" />
	<allow-intent href="http://*/*" />
	<allow-intent href="https://*/*" />
	<allow-intent href="tel:*" />
	<allow-intent href="sms:*" />
	<allow-intent href="mailto:*" />
	<allow-intent href="geo:*" />
	<platform name="android">
	    <allow-intent href="market:*" />
	    <preference name="orientation" value="portrait" />
	</platform>
	<platform name="ios">
	    <allow-intent href="itms:*" />
	    <allow-intent href="itms-apps:*" />
	    <preference name="orientation" value="portrait" />
	</platform>

	<gap:plugin name="com.phonegap.plugin.statusbar" version="~1.1.0" />
	<plugin name="com.phonegap.plugin.statusbar" source="pgb" version="~1.1.0" />
	<plugin name="com.phonegap.plugin.statusbar" source="pgb" spec="~1.1.0" />

	<gap:plugin name="cordova-plugin-whitelist" source="npm" version="~1" />
	<plugin name="cordova-plugin-whitelist" version="~1" />
	<plugin name="cordova-plugin-whitelist" spec="~1" />
</widget>